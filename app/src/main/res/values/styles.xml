<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/main_background</item>
    </style>

    <style name="DefaultListTitleStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/bg_shape_listtitle</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="DefaultButtonStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@drawable/bg_shape_default_button</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnimBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="CLoopDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/White</item>
    </style>
</resources>
